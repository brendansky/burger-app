<div class="container bg">

	<div class="row">
		<div class="center col-sm-12">
			<img src="assets/img/burger.jpg" alt="Eat-Da-Burger App">
			<h1>Eat-Da-Burger</h1>
			<p></p>
		</div>
	</div>
	<!-- end .row -->

	<div class="row">
		<div class="col-sm-6">

			<br>
			<ul>
				{{#each burgers}} {{#unless this.eaten}}
				<li>
					{{this.id}} {{this.burger_name}}

					<form action="/{{this.id}}?_method=PUT" method="POST">
						<input type="hidden" name="eaten" value="true">
						<button class="btn-primary" type="submit">Devour It!</button>
					</form>

				</li>
				{{/unless}} {{/each}}
			</ul>

		</div>

		<div class="col-sm-6">

			{{#each burgers}} {{#if this.eaten}}
			<li>
				{{this.id}} {{this.burger_name}}

			</li>
			{{/if}} {{/each}}

		</div>

	</div>
	<!-- end .row -->

	<div class="row">
		<div class="center col-sm-12">

			<form class="form" action="/" method="POST">

				<div class="form-group">
					<p>Enter a burger and click the "Submit" button.</p>
					<input type="text" name="burger_name">
				</div>

				<button class="btn-primary" type="submit">Submit</button>
			</form>

		</div>

	</div>
	<!-- end .row -->

</div>